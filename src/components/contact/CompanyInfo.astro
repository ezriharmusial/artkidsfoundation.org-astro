  <div class="flex flex-col text-center p-4">
    <div>
      <p class="font-bold text-md text-primary-500">{ locale[lang].telephone } (HOLLAND)
      </p>
      <p class="font-black text-lg"><a
					class="text-secondary"
					href="tel:+31(0)6 285 86 335" title="Call Ezri Harmusial">+31(0)6 285 86 335</a>
      </p>
    </div>
  </div>
  <div class="flex flex-col text-center p-4">
    <div>
      <p class="font-bold text-md text-primary-500">{ locale[lang].telephone } (AFRICA)
      </p>
      <p class="font-black text-lg"><a href="tel:+234 916 060 2716"
					class="has-text-secondary"
					title="Call ArtKids Africa">+234 916 060 2716</a>
      </p>
    </div>
  </div>
  <div class="flex flex-col text-center p-4">
    <div>
      <p class="font-bold text-md text-primary-500">{ locale[lang].bankaccount }
      </p>
      <p class="font-black text-lg ">NL 92 INGB 000 663 90 81
      </p>
    </div>
  </div>
  <div class="flex flex-col text-center p-4">
    <div>
      <p class="font-bold text-md text-primary-500">{ locale[lang].tax }
      </p>
      <p class=" font-bold text-lg">55762441
      </p>
    </div>
