---
import Icon from "astro-icon";

const { title, icon, pack } = (Astro.props)
---
<p class="transition-colors duration-500 text-center font-semibold text-xl leading-4 md:text-2xl md:leading-5 lg:text-3xl xl:text-4xl lg:leading-7 xl:leading-9 drop-shadow-2xl hover:text-yellow-400 dark:focus:text-gray-100">
    <span class="flex items-center justify-center">
    <Icon pack={pack || "teenyicons"} name={icon || "anchor-solid"} class={"h-8 w-8 p-1"} />
    <span>
    {title}
    </span>
    </span>
</p>