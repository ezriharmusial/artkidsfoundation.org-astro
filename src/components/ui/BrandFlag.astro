---
import { Image } from "@astrojs/image/components";
---

<a class="flex flex-shrink items-center hover:text-yellow-400 dark:focus:text-gray-100 mt-2 lg:mt-0 mr-1 " href="/">
    <!-- {$player.track?.alignImage == 'right'  ? 'ml-1 md:ml-2 -scale-x-100' : '} -->
    <figure class="image transition-all duration-500 m-0 p-0 w-10 xs:w-8 lg:w-14 xl:w-16 mr-1 md:mr-2">
        <img loading="lazy" width={64} height={68} class="drop-shadow-2xl" src="/logo-512.png" alt="Artkids Foundation Home"/>
    </figure>
    <h1 class="marker transition-colors duration-500 text-lg font-bold leading-3 md:text-xl md:leading-4 lg:text-2xl xl:text-3xl lg:leading-6 xl:leading-8 drop-shadow-xl hover:text-yellow-400 dark:focus:text-gray-100">
        <span class="portrait:hidden">
            <span class="block">Artkids</span><span>Foundation</span>
        </span>
    </h1>
</a>